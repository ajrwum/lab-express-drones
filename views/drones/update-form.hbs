<h2>Update the drone</h2>

<form action="/drones/{{drone._id}}/edit" method="POST">
  <label for="name">Name:</label>
  <input id="name" type="text" name="name" value="{{drone.name}}">

  <label for="propellers">Propellers:</label>
  <input id="propellers" type="number" name="propellers" value="{{drone.propellers}}">

  <label for="maxSpeed">Max speed:</label>
  <input id="maxSpeed" type="number" name="maxSpeed" value="{{drone.maxSpeed}}">

  <button>Update</button>
</form>
